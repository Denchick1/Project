<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppGreyTheme" parent="AppTheme">
        <item name="colorControlNormal">#d8d8d8</item>
        <item name="colorControlActivated">#d8d8d8</item>
        <item name="colorAccent">#9699a7</item>
    </style>

    <style name="AppDarkBlueTheme" parent="AppTheme">
        <item name="colorAccent">@color/dark_blue</item>
    </style>

    <style name="MyDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/dark_blue</item>
        <item name="android:fontFamily">@font/proxima_nova_semibold</item>
    </style>

    <style name="SwitchTheme" parent="AppDarkBlueTheme">
        <item name="colorAccent">#303a46</item>
        <item name="android:textAppearance">@style/TextHint</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_x</item>
    </style>

    <style name="EditTextWhiteTranparent" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">#68ffffff</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textCursorDrawable">@drawable/white_cursor</item>
    </style>

    <style name="myProgressBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">#8cffffff</item>

    </style>

    <style name="myToolbar" parent="Base.V7.Widget.AppCompat.Toolbar">
        <item name="android:background">@color/dark_blue</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="TextHint" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/proxima_nova_semibold</item>
    </style>

    <style name="TextAppearenceHint" parent="@android:style/TextAppearance">
        <item name="android:textColor">#9699a7</item>
    </style>

    <style name="myTextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="hintTextAppearance">@style/TextAppearenceHint</item>
    </style>

    <style name="myEditText" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">#d8d8d8</item>
        <item name="colorControlActivated">#d8d8d8</item>
        <item name="android:fontFamily">@font/proxima_nova_semibold</item>
        <item name="colorAccent">#9699a7</item>
    </style>

    <style name="My_Button_Transparent" parent="Widget.AppCompat.Button">
        <item name="background">@drawable/btn_default</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/black</item>
    </style>

    <style name="CustomRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:minHeight">30dip</item>
        <item name="android:maxHeight">30dip</item>
    </style>



</resources>
