<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/textView32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/proxima_nova_semibold"
            android:text="Выбранный эвакуатор"
            android:textColor="#9699a7"
            app:layout_constraintStart_toEndOf="@+id/civ_photo_evac_order"
            app:layout_constraintTop_toTopOf="@+id/civ_photo_evac_order" />

        <View
            android:id="@+id/dfd3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="#f5f5f5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_requirement_evacuator" />

        <TextView
            android:id="@+id/tv_requirement_evacuator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/proxima_nova_semibold"
            android:text="15 тонн, Кран лебедки"
            android:textColor="@color/dark_blue"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView30"
            app:layout_constraintTop_toBottomOf="@+id/textView30" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/proxima_nova_semibold"
            android:text="Требования к эвакуатору"
            android:textColor="#9699a7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dfd2" />

        <View
            android:id="@+id/dfd2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="#f5f5f5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_status_auto" />

        <TextView
            android:id="@+id/tv_status_auto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/proxima_nova_semibold"
            android:text="В кювете, заблокирована КПП, заблокированы колеса,  низкая посадка "
            android:textColor="@color/dark_blue"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/iv_photo_value"
            app:layout_constraintStart_toStartOf="@+id/textView27"
            app:layout_constraintTop_toBottomOf="@+id/textView27" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/proxima_nova_semibold"
            android:text="Состояние"
            android:textColor="#9699a7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dfd" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/proxima_nova_semibold"
            android:text="Куда доставить"
            android:textColor="#9699a7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_adres_dostav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/proxima_nova_semibold"
            android:text="Ул. Большая морская, д. 6"
            android:textColor="@color/dark_blue"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/tv_distance_dostav"
            app:layout_constraintStart_toStartOf="@+id/textView24"
            app:layout_constraintTop_toBottomOf="@+id/textView24" />

        <TextView
            android:id="@+id/tv_distance_dostav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/proxima_nova_semibold"
            android:text="1.5 км"
            android:textColor="#a4aab3"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_adres_dostav"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/dfd"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="#f5f5f5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_adres_dostav" />

        <ImageView
            android:id="@+id/iv_photo_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/tv_status_auto"
            app:layout_constraintEnd_toEndOf="@+id/tv_distance_dostav"
            app:layout_constraintTop_toTopOf="@+id/textView27"
            app:srcCompat="@drawable/ic_photo_icon" />

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/civ_photo_evac_order"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/group_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dfd3" />

        <TextView
            android:id="@+id/tv_name_evac_bottom_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Volvo XC 90"
            android:textColor="@color/dark_blue"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="@+id/textView32"
            app:layout_constraintTop_toBottomOf="@+id/textView32" />

        <TextView
            android:id="@+id/tv_namber_evac_bottom_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/rectangle_evacuator_number"
            android:paddingBottom="2dp"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:paddingTop="2dp"
            android:text=" A 123 OA 178 RUS"
            android:textColor="#9699a7"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="@+id/tv_name_evac_bottom_order"
            app:layout_constraintTop_toBottomOf="@+id/tv_name_evac_bottom_order" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/iv_photo_value"
            app:layout_constraintTop_toTopOf="@+id/iv_photo_value"
            app:srcCompat="@drawable/black_circle_value_photo" />

        <TextView
            android:id="@+id/textView35"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/proxima_nova_semibold"
            android:gravity="center"
            android:text="10"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="6sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView9"
            app:layout_constraintEnd_toEndOf="@+id/imageView9"
            app:layout_constraintStart_toStartOf="@+id/imageView9"
            app:layout_constraintTop_toTopOf="@+id/imageView9" />

    </android.support.constraint.ConstraintLayout>
</layout>